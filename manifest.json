{
    "name": "Comment Digger",
    "description": "Finds and classifies HTML/CSS/JS comments based on their contents",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["activeTab"],
    /*instead of all urls as used to in V2"
    should I add permission to "notification"? for when comment matches security faults? like exposed passwords?*/
    "page_action": {
      "default_popup": "popup.html",
      "default_title":"primo title",
      "default_icon": {
          "16": "/icons/16.png",
          "32": "/icons/32.png",
          "48": "/icons/48.png",
          "128": "/icons/128.png",
       }
   },
   "icons": {
       "16": "/icons/16.png",
       "32": "/icons/32.png",
       "48": "/icons/48.png",
       "128": "/icons/128.png",
   },
    "background": {
        "service_worker": "background.js"
      }

}